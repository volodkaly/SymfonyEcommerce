{{ form_start(form, {'attr': {'class': 'border p-4 rounded shadow-sm needs-validation', 'novalidate': 'novalidate'}}) }}
    {% for field in form %}
        {% if field.vars.name not in ['_token'] %}
            <div class="mb-3">
                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(field) }}
            </div>
        {% endif %}
    {% endfor %}
    <button class="btn btn-success">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}